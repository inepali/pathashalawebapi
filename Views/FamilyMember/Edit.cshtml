@model com.pathshala.Models.Dto.FamilyMemberStudentModel


@{
    ViewBag.Title = "Update Family Member";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.FamilyMemberStudent.StudentID)
    <h4>Family Member</h4>


    <div class="form-group">
        @Html.LabelFor(model => model.FamilyMemberStudent.FamilyMember.Person.FirstName, "First Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.FamilyMemberStudent.FamilyMember.Person.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FamilyMemberStudent.FamilyMember.Person.FirstName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FamilyMemberStudent.FamilyMember.Person.LastName, "Last Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.FamilyMemberStudent.FamilyMember.Person.LastName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FamilyMemberStudent.FamilyMember.Person.LastName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FamilyMemberStudent.RelationshipType, "Relationship Type", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.FamilyMemberStudent.RelationshipType, new SelectList(Model.RelationshipTypes, "Value", "Name"), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FamilyMemberStudent.RelationshipType, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FamilyMemberStudent.FamilyMember.Person.Email, "Email", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.FamilyMemberStudent.FamilyMember.Person.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FamilyMemberStudent.FamilyMember.Person.Email, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.FamilyMemberStudent.FamilyMember.Person.Address, "Address", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.FamilyMemberStudent.FamilyMember.Person.Address, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FamilyMemberStudent.FamilyMember.Person.Address, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FamilyMemberStudent.FamilyMember.Person.Phone, "Phone#", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.FamilyMemberStudent.FamilyMember.Person.Phone, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FamilyMemberStudent.FamilyMember.Person.Phone, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.FamilyMemberStudent.FamilyMember.Person.Mobile, "Mobile#", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.FamilyMemberStudent.FamilyMember.Person.Mobile, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FamilyMemberStudent.FamilyMember.Person.Mobile, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.FamilyMemberStudent.FamilyMember.TextToMobile, "Text To Mobile", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.RadioButtonFor(model => model.FamilyMemberStudent.FamilyMember.TextToMobile, true, new { htmlAttributes = new { @class = "form-control" } }) Yes
            @Html.RadioButtonFor(model => model.FamilyMemberStudent.FamilyMember.TextToMobile, false, new { htmlAttributes = new { @class = "form-control" } }) No
            @Html.ValidationMessageFor(model => model.FamilyMemberStudent.FamilyMember.TextToMobile, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FamilyMemberStudent.FamilyMember.CICOCode, "CICO Code", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.FamilyMemberStudent.FamilyMember.CICOCode, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FamilyMemberStudent.FamilyMember.CICOCode, "", new { @class = "text-danger" })
        </div>
    </div>

    <h4>In Case of Emergency</h4>
    <div class="form-group">
        @Html.LabelFor(model => model.FamilyMemberStudent.FamilyMember.EmergencyContact, "Contact#", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.FamilyMemberStudent.FamilyMember.EmergencyContact, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FamilyMemberStudent.FamilyMember.EmergencyContact, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FamilyMemberStudent.FamilyMember.EmergencyContactPerson, "Contact Person", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.FamilyMemberStudent.FamilyMember.EmergencyContactPerson, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FamilyMemberStudent.FamilyMember.EmergencyContactPerson, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a href="/Student" class="btn btn-light active" role="button" aria-pressed="true">Cancel</a>
        </div>
    </div>
</div>
}
