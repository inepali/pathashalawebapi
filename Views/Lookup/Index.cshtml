@model IEnumerable<com.pathshala.Models.Lookup>

@{
    ViewBag.Title = "Manage Lookup (Reference Data)";
}

<div class="row">
    <div class="col-sm">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="col-sm text-right">
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus" title="Create"></i>  Add New
        </a>

    </div>
</div>
<table class="table">
    <tr>
        <th>
            #
        </th>
        <th>
            Name
        </th>
        <th>
            Display
        </th>
        <th>
            Sort Order
        </th>
        <th>
           Is Active?
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Display)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.SortOrder)
        </td>

        <td>
            @(item.IsActive.GetValueOrDefault() ? "Yes" : "No")
        </td>
        
        <td class="text-right">
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-primary btn-sm" })
        </td>
    </tr>
}
</table>
